{
  "format_version": "1.21.10",
  "minecraft:entity": {
    "description": {
      "identifier": "{{PROJECT_NAME}}:attacker_mob",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    "components": {
      "minecraft:health": {
        "value": 20,
        "max": 20
      },
      "minecraft:movement": {
        "value": {{ENEMY_SPEED}}
      },
      "minecraft:navigation.walk": {
        "can_path_over_water": true,
        "avoid_damage_blocks": true
      },
      "minecraft:movement.basic": {},
      "minecraft:jump.static": {},
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 0,
        "must_see": false,
        "entity_types": [
          {
            "filters": {
              "test": "has_component",
              "subject": "other",
              "value": "minecraft:health"
            },
            "max_dist": 64
          }
        ]
      },
      "minecraft:behavior.melee_attack": {
        "priority": 1,
        "speed_multiplier": 1.2,
        "track_target": true
      },
      "minecraft:attack": {
        "damage": 3
      },
      "minecraft:loot": {
        "table": "loot_tables/attacker_rewards.json"
      }
    },
    "events": {
      "minecraft:entity_spawned": {
        "randomize": [
          {
            "weight": 80,
            "add": { "component_groups": [ "normal" ] }
          },
          {
            "weight": {{DIFFICULTY_SCALING}},
            "add": { "component_groups": [ "elite" ] }
          }
        ]
      }
    },
    "component_groups": {
      "normal": {},
      "elite": {
        "minecraft:health": { "value": 40, "max": 40 },
        "minecraft:attack": { "damage": 6 },
        "minecraft:variant": { "value": 1 }
      }
    }
  }
}
