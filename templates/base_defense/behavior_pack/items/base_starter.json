{
  "format_version": "1.21.130",
  "minecraft:item": {
    "description": {
      "identifier": "{{PROJECT_NAME}}:base_starter",
      "menu_category": {
        "category": "equipment"
      }
    },
    "components": {
      "minecraft:icon": {
        "textures": {
          "default": "base_starter_icon"
        }
      },
      "minecraft:display_name": {
        "value": "Basis-Starter"
      },
      "minecraft:use_animation": "bow",
      "minecraft:use_modifiers": {
        "use_duration": 0.5,
        "movement_modifier": 0.5
      },
      "minecraft:on_use": {
        "on_use": {
          "event": "spawn_core",
          "target": "self"
        }
      },
      "minecraft:entity_placer": {
        "entity": "{{PROJECT_NAME}}:defense_core",
        "dispense_on": [ "minecraft:grass_block", "minecraft:dirt", "minecraft:stone" ]
      },
      "minecraft:max_stack_size": 1
    }
  }
}
